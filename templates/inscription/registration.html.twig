{% extends 'baseFront.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block hero %}
{{ form_start(form,{'attr': {'novalidate':'novalidate'}}) }}
<section class="vh-100" style="margin-bottom : 150px">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
               <img src="{{asset('img/74.jpg')}}"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; margin-top: 100px;
                margin-left: 20px;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
              <form class="container">
              <h1>  Inscription</h1>

 {{ form_row(form.email, { 'attr': {  'placeholder': 'Adresse email...' } }  ) }}
 {{ form_row(form.username, { 'label':'Nom d\'utilisateur', 'attr': {'placeholder':'Nom d\'utilisateur...' } }) }}
 {{ form_row(form.password, { 'label':'Mot de passe', 'attr': {'placeholder':'Mot de passe...' } }) }}
 {{ form_row(form.confirm_password, { 'label':'Répétez votre mot de passe',
                                      'attr':{'placeholder':'Répétez votre mot de passe...' } }) }}
 {{ form_row(form.numero, { 'label':'Numero de telephone ... ',
                                      'attr':{'placeholder':'Saisie votre numero ...' } }) }} 
 {{ form_row(form.adresse, { 'label':'Adresse ...',
                                      'attr':{'placeholder':'donner votre adresse...' } }) }} 
 {{ form_row(form.image, { 'label':'image ...',
                                      'attr':{'placeholder':'donner votre image ...' } }) }} 
  <button type="submit" class="btn btn-success">Inscription</button>
 {{ form_end(form) }}
 </form>
   </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
